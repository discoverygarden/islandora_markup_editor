/**
 * Helper function to see if the user can save data.
 *
 * @param AbstractObject $object
 *   An AbstractObject representing an object within Fedora.
 *
 * @return bool
 *   TRUE if the user has access, FALSE otherwise.
 */
function islandora_markup_editor_save_tei_access(AbstractObject $object) {
  if (!isset($object['OBJ'])) {
    return FALSE;
  }
  return islandora_datastream_access(ISLANDORA_METADATA_EDIT, $object['OBJ']);
}
